<Page
    x:Class="Meteoroi.Views.CurrentWeather"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"  
    xmlns:local="using:Meteoroi.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:viewModels="using:Meteoroi.ViewModels"
    xmlns:converters="using:Meteoroi.Converters"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:behaviors="using:Microsoft.Toolkit.Uwp.UI.Animations.Behaviors"
    xmlns:msAdvertising="using:Microsoft.Advertising.WinRT.UI"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">
    <Page.Resources>
        <converters:DistanceUnit x:Key="DistanceUnit" />
        <converters:LocationToString x:Key="LocationToString" />
        <converters:ForecastIconToImage x:Key="ForecastIconToImage" />
        <converters:ForecastTimeToUpdatedText x:Key="ForecastTimeToUpdatedText" />
        <converters:ForecastTimeToShortDateText x:Key="ForecastTimeToShortDateText" />
        <converters:ForecastTimeToHourText x:Key="ForecastTimeToHourText" />
        <converters:ForecastTimeText x:Key="ForecastTimeText" />
        <converters:SelectedTempMetricSymbol x:Key="SelectedTempMetricSymbol" />
        <converters:UnselectedTempMetricSymbol x:Key="UnselectedTempMetricSymbol" />
        <converters:PercipProbabilityText x:Key="PercipProbabilityText" />
        <converters:NumberToZeroDecimals x:Key="NumberToZeroDecimals" />
        <converters:NumberToTwoDecimals x:Key="NumberToTwoDecimals" />
        <converters:WindSpeedUnit x:Key="WindSpeedUnit" />
        <converters:TempToText x:Key="TempToText" />
        <converters:BarometerUnit x:Key="BarometerUnit" />
        <converters:DailyForecastDateText x:Key="DailyForecastDateText" />
        <converters:DailyForecastIconVisibility x:Key="DailyForecastIconVisibility" />
        <converters:DailyForecastTempHigh x:Key="DailyForecastTempHigh" />
        <converters:DailyForecastTempLow x:Key="DailyForecastTempLow" />
        <converters:DailyForecastTempVisibility x:Key="DailyForecastTempVisibility" />
        <converters:DailyForecastLine1Visibility x:Key="DailyForecastLine1Visibility" />
        <converters:DailyForecastLineAlignment x:Key="DailyForecastLineAlignment" />
        <converters:Line1Text x:Key="Line1Text" />
        <converters:Line2Text x:Key="Line2Text" />
        <converters:Line1MaxLines x:Key="Line1MaxLines" />
        <converters:Line2MaxLines x:Key="Line2MaxLines" />
        <converters:HourlyForecastTimeText        x:Key="HourlyForecastTimeText" />
        <converters:HourlyCurrentTemp             x:Key="HourlyCurrentTemp" />
        <converters:HourlyLine1MaxLines           x:Key="HourlyLine1MaxLines" />
        <converters:HourlyLine2MaxLines           x:Key="HourlyLine2MaxLines" />
        <converters:HourlyLine3MaxLines           x:Key="HourlyLine3MaxLines" />
        <converters:HourlyLine1Text               x:Key="HourlyLine1Text" />
        <converters:HourlyLine2Text               x:Key="HourlyLine2Text" />
        <converters:HourlyLine3Text               x:Key="HourlyLine3Text" />
        <converters:HourlyForecastIconVisibility  x:Key="HourlyForecastIconVisibility" />
        <converters:HourlyForecastTempVisibility  x:Key="HourlyForecastTempVisibility" />
        <converters:HourlyForecastLine1Visibility x:Key="HourlyForecastLine1Visibility" />
        <converters:CurrentForecastDewPointText   x:Key="CurrentForecastDewPointText" />
        <converters:CurrentForecastHumidityText   x:Key="CurrentForecastHumidityText" />
        <converters:CurrentForecastBarometerText  x:Key="CurrentForecastBarometerText" />
        <converters:CurrentForecastVisibilityText x:Key="CurrentForecastVisibilityText" />
        <converters:CurrentForecastWindSpeedText  x:Key="CurrentForecastWindSpeedText" />
        <converters:CurrentForecastAltTempText    x:Key="CurrentForecastAltTempText" />
        <converters:CurrentForecastAltTempVisibility x:Key="CurrentForecastAltTempVisibility" />
        <converters:CurrentForecastRegTempVisibility x:Key="CurrentForecastRegTempVisibility" />
    </Page.Resources>
    <ScrollViewer Background="{StaticResource SystemControlChromeMediumLowAcrylicWindowMediumBrush}">
        <Grid>
            <Image Name="SplashImg" Source="ms-appx:///Assets/Logo.png" Stretch="Uniform" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center">
                <interactivity:Interaction.Behaviors>
                    <behaviors:Rotate
                        Value="359"
                        CenterX="250" 
                        CenterY="250" 
                        Duration="3000"
                        Delay="500" 
                        AutomaticallyStart="True"/>
                </interactivity:Interaction.Behaviors>
            </Image>
            <Grid Name="MainGrid" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Margin="0,32,0,0" HorizontalAlignment="Center" Name="CurrentStackPanel">
                    <Grid>
                        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" >
                            <Button Width="45" Height="45" Background="Transparent" BorderThickness="0" Click="LiveTileEdit_Click">
                                <TextBlock Text="&#xECA5;" FontFamily="Segoe MDL2 Assets" FontSize="25"/>
                                <ToolTipService.ToolTip>
                                    <ToolTip>
                                        <TextBlock TextWrapping="Wrap" Text="Click to customize"/>
                                    </ToolTip>
                                </ToolTipService.ToolTip>
                            </Button>
                            <Button Width="45" Height="45" Background="Transparent" BorderThickness="0" Loaded="Upgrade_Loaded" Name="UpgradeButton">
                                <TextBlock Text="&#xE734;" FontFamily="Segoe MDL2 Assets" FontSize="25"/>
                                <ToolTipService.ToolTip>
                                    <ToolTip>
                                        <TextBlock TextWrapping="Wrap" Text="Upgrade to Pro"/>
                                    </ToolTip>
                                </ToolTipService.ToolTip>
                                <Button.Flyout>
                                    <Flyout Placement="Left">
                                        <StackPanel>
                                            <TextBlock Foreground="DeepSkyBlue" FontSize="20" HorizontalAlignment="Center">Upgrade to Pro!</TextBlock>
                                            <TextBlock FontSize="11" Text="New User Promo: Save 20%" HorizontalAlignment="Center" Foreground="Gold"/>
                                            <HyperlinkButton HorizontalAlignment="Center" Click="Trial_Click" Loaded="Trial_Loaded">Start FREE Trial (14 Days)</HyperlinkButton>
                                            <TextBlock Margin="0,0,0,0" HorizontalAlignment="Left">- No advertisements. Ever. Period.</TextBlock>
                                            <TextBlock Margin="0,0,0,5" HorizontalAlignment="Left">- Settings preserved between sessions.</TextBlock>
                                            <Button    FontSize="20" HorizontalAlignment="Stretch" BorderThickness="0" Click="Upgrade_Click">
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Grid Margin="0,0,5,0">
                                                            <TextBlock Foreground="DarkGray" HorizontalAlignment="Center">$1.99</TextBlock>
                                                            <Line      Stretch="Fill" Stroke="DarkGray" StrokeThickness="2 " X1="1" Y2="15" VerticalAlignment="Center"  HorizontalAlignment="Stretch"   />
                                                        </Grid>
                                                        <TextBlock HorizontalAlignment="Center" Foreground="DeepSkyBlue">$0.99</TextBlock>
                                                    </StackPanel>
                                                    <TextBlock HorizontalAlignment="Center" Foreground="Gold" FontSize="12" Loaded="TrialDaysRemaining_Loaded">(ends in 14 days)</TextBlock>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>
                        </StackPanel>
                        <Grid Canvas.ZIndex="999" Visibility="Collapsed" Name="LiveTileEditGrid">
                            <Rectangle Canvas.ZIndex="-1" Fill="Black" Opacity=".7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                            <StackPanel Margin="0,10,0,0">
                                <TextBlock HorizontalAlignment="Center" FontSize="25" Text="LiveTile Settings" />
                                <Grid Margin="0,20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" HorizontalAlignment="Stretch">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="2">
                                            <TextBlock Width="180" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0,10,2">Medium Tile Item Count</TextBlock>
                                            <ComboBox Width="180" HorizontalAlignment="Stretch" Loaded="MedTileItemCountComboBox_Loaded" SelectionChanged="MedTileItemCountComboBox_SelectionChanged">
                                                <ComboBoxItem HorizontalAlignment="Stretch">2</ComboBoxItem>
                                                <ComboBoxItem HorizontalAlignment="Stretch">3</ComboBoxItem>
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="2">
                                            <TextBlock Width="180" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0,10,2">Wide Tile Item Count</TextBlock>
                                            <ComboBox Width="180" HorizontalAlignment="Stretch" Loaded="WideTileItemCountComboBox_Loaded" SelectionChanged="WideTileItemCountComboBox_SelectionChanged">
                                                <ComboBoxItem HorizontalAlignment="Stretch">5</ComboBoxItem>
                                                <ComboBoxItem HorizontalAlignment="Stretch">6</ComboBoxItem>
                                                <ComboBoxItem HorizontalAlignment="Stretch">7</ComboBoxItem>
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="2">
                                            <TextBlock Width="180" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0,10,2">Hour Interval</TextBlock>
                                            <ComboBox Width="180" HorizontalAlignment="Stretch" Loaded="LiveTileHourIntervalComboBox_Loaded" SelectionChanged="LiveTileHourIntervalComboBox_SelectionChanged">
                                                <ComboBoxItem HorizontalAlignment="Stretch">1</ComboBoxItem>
                                                <ComboBoxItem HorizontalAlignment="Stretch">2</ComboBoxItem>
                                                <ComboBoxItem HorizontalAlignment="Stretch">3</ComboBoxItem>
                                                <ComboBoxItem HorizontalAlignment="Stretch">4</ComboBoxItem>
                                                <ComboBoxItem HorizontalAlignment="Stretch">5</ComboBoxItem>
                                                <ComboBoxItem HorizontalAlignment="Stretch">6</ComboBoxItem>
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="2">
                                            <TextBlock Width="180" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0,10,2">Temperature</TextBlock>
                                            <ComboBox Width="180" HorizontalAlignment="Stretch" Loaded="LiveTileTempComboBox_Loaded" SelectionChanged="LiveTileTempComboBox_SelectionChanged">
                                                <ComboBoxItem HorizontalAlignment="Stretch">Real</ComboBoxItem>
                                                <ComboBoxItem HorizontalAlignment="Stretch">Feels Like</ComboBoxItem>
                                            </ComboBox>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                        <CheckBox Content="Show Hourly Forecast" Loaded="ShowHourlyLiveTile_Loaded" Checked="ShowHourlyLiveTile_Checked" Unchecked="ShowHourlyLiveTile_Checked"/>
                                        <CheckBox Content="Show Daily Forecast"  Loaded="ShowDailyLiveTile_Loaded" Checked="ShowDailyLiveTile_Checked" Unchecked="ShowDailyLiveTile_Checked"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            <Button Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" BorderThickness="0" Content="Done" Click="LiveTileEditDone_Click"/>
                        </Grid>
                        <Grid Canvas.ZIndex="999" Visibility="Collapsed" Name="CurrentEditGrid">
                            <Rectangle Canvas.ZIndex="-1" Fill="Black" Opacity=".7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                            <Grid Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <StackPanel HorizontalAlignment="Stretch">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="2">
                                            <TextBlock Width="120" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0,10,2">Location Format</TextBlock>
                                            <ComboBox Width="220" HorizontalAlignment="Stretch" SelectionChanged="LocationFormatComboBox_SelectionChanged" Loaded="LocationFormatComboBox_Loaded">
                                                <ComboBoxItem HorizontalAlignment="Stretch">Seattle</ComboBoxItem>
                                                <ComboBoxItem HorizontalAlignment="Stretch">Seattle, WA</ComboBoxItem>
                                                <ComboBoxItem HorizontalAlignment="Stretch">Seattle, WA, USA</ComboBoxItem>
                                                <ComboBoxItem HorizontalAlignment="Stretch">Seattle, WA, United States</ComboBoxItem>
                                            </ComboBox>
                                        </StackPanel>
                                        <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="2">
                                            <TextBlock Width="120" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0,10,2">Weather Icon</TextBlock>
                                            <ComboBox Width="220" HorizontalAlignment="Stretch" SelectionChanged="CurrentIconComboBox_SelectionChanged" Loaded="CurrentIconComboBox_Loaded">
                                                <ComboBoxItem HorizontalAlignment="Stretch">Show</ComboBoxItem>
                                                <ComboBoxItem HorizontalAlignment="Stretch">Hide</ComboBoxItem>
                                            </ComboBox>
                                        </StackPanel>-->
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="2">
                                            <TextBlock Width="120" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0,10,2">Temperature</TextBlock>
                                            <ComboBox Width="220" HorizontalAlignment="Stretch" SelectionChanged="CurrentTempIsRealComboBox_SelectionChanged" Loaded="CurrentTempIsRealComboBox_Loaded">
                                                <ComboBoxItem HorizontalAlignment="Stretch">Real Temperature</ComboBoxItem>
                                                <ComboBoxItem HorizontalAlignment="Stretch">Feels Like Temperature</ComboBoxItem>
                                            </ComboBox>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                    <CheckBox Content="Alternate Temp" Unchecked="CurrnetCheckBox_Checked" Checked="CurrnetCheckBox_Checked" Loaded="AltTempCheckbox_Loaded"/>
                                    <CheckBox Content="Wind Speed"     Unchecked="CurrnetCheckBox_Checked" Checked="CurrnetCheckBox_Checked" Loaded="WindSpeedCheckbox_Loaded"/>
                                    <CheckBox Content="Visibility"     Unchecked="CurrnetCheckBox_Checked" Checked="CurrnetCheckBox_Checked" Loaded="VisibilityCheckbox_Loaded"/>
                                    <CheckBox Content="Barometer"      Unchecked="CurrnetCheckBox_Checked" Checked="CurrnetCheckBox_Checked" Loaded="BarometerCheckbox_Loaded"/>
                                    <CheckBox Content="Humidity"       Unchecked="CurrnetCheckBox_Checked" Checked="CurrnetCheckBox_Checked" Loaded="HumidityCheckbox_Loaded"/>
                                    <CheckBox Content="Dew Point"      Unchecked="CurrnetCheckBox_Checked" Checked="CurrnetCheckBox_Checked" Loaded="DewPointCheckbox_Loaded"/>
                                </StackPanel>
                            </Grid>
                            <Button Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" BorderThickness="0" Content="Done" Click="CurrentEditDone_Click"/>
                        </Grid>
                        <StackPanel Margin="20">
                            <Grid HorizontalAlignment="Center" Name="CurrentHeaderGrid">
                                <Button BorderThickness="0" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Stretch" Click="CurrentEdit_Click">
                                    <TextBlock Grid.Row="0" FontSize="30" Text="{x:Bind CurrentForecast.LocationString, Mode=OneWay}"/>
                                    <ToolTipService.ToolTip>
                                        <ToolTip>
                                            <TextBlock TextWrapping="Wrap" Text="Click to customize"/>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </Button>
                            </Grid>
                            <Grid HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="1" Margin="15,0" Height="85" Width="85" Source="{x:Bind CurrentForecast.Icon, Mode=OneWay, Converter={StaticResource ForecastIconToImage}}" />
                                <StackPanel Grid.Column="2" Orientation="Horizontal" Visibility="{x:Bind CurrentForecast.IsMainRealTemp, Mode=OneWay, Converter={StaticResource CurrentForecastAltTempVisibility}}">
                                    <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="100" Text="{x:Bind CurrentForecast.Temp, Mode=OneWay}" />
                                    <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="100" Text="°"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2" Orientation="Horizontal" Visibility="{x:Bind CurrentForecast.IsMainRealTemp, Mode=OneWay, Converter={StaticResource CurrentForecastRegTempVisibility}}">
                                    <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="100" Text="{x:Bind CurrentForecast.ApparentTemp, Mode=OneWay}" />
                                    <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="100" Text="°"/>
                                </StackPanel>
                                <Grid Grid.Column="3" VerticalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel>
                                        <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="25" 
                                                   Text="{x:Bind CurrentForecast.IsCelcius, Mode=OneWay, Converter={StaticResource SelectedTempMetricSymbol}}"/>
                                        <Button Background="Transparent" Height="38" Width="38" BorderThickness="0" Padding="0" Margin="0" Click="ToggleIsCelcius_Click">
                                            <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="20" 
                                                       Text="{x:Bind CurrentForecast.IsCelcius, Mode=OneWay, Converter={StaticResource UnselectedTempMetricSymbol}}" Foreground="DarkGray"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                            <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="30" FontWeight="Thin" Text="{x:Bind CurrentForecast.Summary, Mode=OneWay}"/>
                            <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="12" FontWeight="Bold" Margin="0,5,0,10" 
                                       Text="{x:Bind CurrentForecast.Time, Mode=OneWay, Converter={StaticResource ForecastTimeToUpdatedText}}" />
                            <Grid HorizontalAlignment="Center" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0" Margin="15,0" Visibility="{x:Bind CurrentForecast.ShowTempAlt, Mode=OneWay, Converter={StaticResource CurrentForecastRegTempVisibility}}">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                                                Visibility="{x:Bind CurrentForecast.IsMainRealTemp, Mode=OneWay, Converter={StaticResource CurrentForecastRegTempVisibility}}" >
                                        <TextBlock Grid.Column="0" FontSize="12" Text="Feels Like:"/>
                                        <TextBlock Grid.Column="0" FontSize="12" Margin="5,0,0,0" 
                                                   Text="{x:Bind CurrentForecast.ApparentTemp, Mode=OneWay, Converter={StaticResource CurrentForecastAltTempText}}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                                                Visibility="{x:Bind CurrentForecast.IsMainRealTemp, Mode=OneWay, Converter={StaticResource CurrentForecastAltTempVisibility}}" >
                                        <TextBlock Grid.Column="0" FontSize="12" Text="Real Temp:"/>
                                        <TextBlock Grid.Column="0" FontSize="12" Margin="5,0,0,0"                                            
                                                   Text="{x:Bind CurrentForecast.Temp, Mode=OneWay, Converter={StaticResource CurrentForecastAltTempText}}"/>
                                    </StackPanel>
                                </Grid>
                                <StackPanel Grid.Column="1" Margin="15,0" Orientation="Horizontal" HorizontalAlignment="Center" 
                                            Visibility="{x:Bind CurrentForecast.ShowWindSpeed, Mode=OneWay, Converter={StaticResource CurrentForecastRegTempVisibility}}">
                                    <TextBlock FontSize="12" Text="Wind:"/>
                                    <TextBlock FontSize="11" Margin="5,0,0,0"  Text="&#xEBE6;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center">
                                        <interactivity:Interaction.Behaviors>
                                            <behaviors:Rotate
                                                        Value="{x:Bind CurrentForecast.WindBearing, Mode=OneWay}"
                                                        CenterX="5.5" 
                                                        CenterY="5.5" 
                                                        Duration="0"
                                                        Delay="0" 
                                                        AutomaticallyStart="True"/>
                                        </interactivity:Interaction.Behaviors>
                                    </TextBlock>
                                    <TextBlock FontSize="12" Margin="5,0,0,0" Text="{x:Bind CurrentForecast.WindSpeed, Mode=OneWay, Converter={StaticResource CurrentForecastWindSpeedText}}"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2" FontSize="12" Margin="15,0" 
                                           Visibility="{x:Bind CurrentForecast.ShowVisibility, Mode=OneWay, Converter={StaticResource CurrentForecastRegTempVisibility}}"
                                           Text="{x:Bind CurrentForecast.Visibility, Mode=OneWay, Converter={StaticResource CurrentForecastVisibilityText}}"/>
                            </Grid>
                            <Grid HorizontalAlignment="Center" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" FontSize="12" Margin="15,0" 
                                           Visibility="{x:Bind CurrentForecast.ShowPressure, Mode=OneWay, Converter={StaticResource CurrentForecastRegTempVisibility}}"
                                           Text="{x:Bind CurrentForecast.Pressure, Mode=OneWay, Converter={StaticResource CurrentForecastBarometerText}}"/>
                                <TextBlock Grid.Column="1" FontSize="12" Margin="15,0" 
                                           Visibility="{x:Bind CurrentForecast.ShowHumidity, Mode=OneWay, Converter={StaticResource CurrentForecastRegTempVisibility}}"
                                           Text="{x:Bind CurrentForecast.Humidity, Mode=OneWay, Converter={StaticResource CurrentForecastHumidityText}}"/>
                                <TextBlock Grid.Column="2" FontSize="12" Margin="15,0" 
                                           Visibility="{x:Bind CurrentForecast.ShowDewPoint, Mode=OneWay, Converter={StaticResource CurrentForecastRegTempVisibility}}"
                                           Text="{x:Bind CurrentForecast.DewPoint, Mode=OneWay, Converter={StaticResource CurrentForecastDewPointText}}"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </StackPanel>
                <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                    <msAdvertising:AdControl Visibility="Collapsed" Margin="5"
                                Grid.Row="0" Canvas.ZIndex="-2"
                                Name="MicrosoftAdControl"    
                                Width="728"
                                Height="90"
                                HorizontalAlignment="Center"
                                ApplicationId="9nblggh5130s"
                                AdUnitId="1100037871" 
                                Loaded="MicrosoftAd_Loaded"
                        />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Grid.ColumnSpan="3" Canvas.ZIndex="999" Visibility="Collapsed" Name="DailyEditGrid">
                            <Rectangle Canvas.ZIndex="-1" Fill="Black" Opacity=".7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                            <Grid Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" HorizontalAlignment="Stretch">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="2">
                                        <TextBlock Width="100" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0,10,2">Date Format</TextBlock>
                                        <ComboBox Width="180" HorizontalAlignment="Stretch" Loaded="DailyDateBox_Loaded" SelectionChanged="DailyDateBox_SelectionChanged">
                                            <ComboBoxItem HorizontalAlignment="Stretch">Tue 1</ComboBoxItem>
                                            <ComboBoxItem HorizontalAlignment="Stretch">1 Tue</ComboBoxItem>
                                            <ComboBoxItem HorizontalAlignment="Stretch">Tuesday 1</ComboBoxItem>
                                            <ComboBoxItem HorizontalAlignment="Stretch">1 Tuesday</ComboBoxItem>
                                            <ComboBoxItem HorizontalAlignment="Stretch">Jan 1</ComboBoxItem>
                                            <ComboBoxItem HorizontalAlignment="Stretch">1 Jan</ComboBoxItem>
                                            <ComboBoxItem HorizontalAlignment="Stretch">January 1</ComboBoxItem>
                                            <ComboBoxItem HorizontalAlignment="Stretch">1 January</ComboBoxItem>
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="2">
                                        <TextBlock Width="100" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0,10,2">Weather Icon</TextBlock>
                                        <ComboBox Width="180" HorizontalAlignment="Stretch" Loaded="DailyIconBox_Loaded" SelectionChanged="DailyIconBox_SelectionChanged">
                                            <ComboBoxItem HorizontalAlignment="Stretch">Show</ComboBoxItem>
                                            <ComboBoxItem HorizontalAlignment="Stretch">Hide</ComboBoxItem>
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="2">
                                        <TextBlock Width="100" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0,10,2">Line 1</TextBlock>
                                        <ComboBox Width="180" HorizontalAlignment="Stretch" Name="DailyLine1Box"
                                                  Loaded="DailyLineBox_Loaded" SelectionChanged="DailyComboBox_SelectionChanged">
                                            <ComboBoxItem HorizontalAlignment="Stretch">Weather Description</ComboBoxItem>
                                            <ComboBoxItem HorizontalAlignment="Stretch">Humidity</ComboBoxItem>
                                            <ComboBoxItem HorizontalAlignment="Stretch">Percipitation %</ComboBoxItem>
                                            <ComboBoxItem HorizontalAlignment="Stretch">CloudCover</ComboBoxItem>
                                            <ComboBoxItem HorizontalAlignment="Stretch">UvIndex</ComboBoxItem>
                                            <ComboBoxItem HorizontalAlignment="Stretch">Wind Speed</ComboBoxItem>
                                            <ComboBoxItem HorizontalAlignment="Stretch">Max Wind</ComboBoxItem>
                                            <ComboBoxItem HorizontalAlignment="Stretch">Visibility</ComboBoxItem>
                                            <ComboBoxItem HorizontalAlignment="Stretch">Temperature</ComboBoxItem>
                                            <ComboBoxItem HorizontalAlignment="Stretch">Hide</ComboBoxItem>
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="2">
                                        <TextBlock Width="100" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0,10,2">Line 2</TextBlock>
                                        <ComboBox Width="180" HorizontalAlignment="Stretch" Name="DailyLine2Box"
                                                  Loaded="DailyLineBox_Loaded" SelectionChanged="DailyComboBox_SelectionChanged">
                                            <ComboBoxItem HorizontalAlignment="Stretch">Weather Description</ComboBoxItem>
                                            <ComboBoxItem HorizontalAlignment="Stretch">Humidity</ComboBoxItem>
